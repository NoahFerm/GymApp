@model Gym.Core.Entities.GymClass

<tr>
    <td>
        @if (User.IsInRole("Member"))
        {
            <a asp-action="Details" asp-route-id="@Model.Id">@Model.Id</a> <span>|</span>
        }
        else
        {
            @Html.DisplayFor(item => item.Name)
        }
        
    </td>
    <td>
        @Html.DisplayFor(item => item.StartTime)
    </td>
    <td>
        @Html.DisplayFor(item => item.Duration)
    </td>
    <td>
        @Html.DisplayFor(item => item.Description)
    </td>
    @{
        if (User.IsInRole("Member"))
        {
            <td>
                

                if (User.IsInRole("Admin"))
                {
                <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> <span>|</span>
                <a asp-action="Delete" asp-route-id="@Model.Id">Delete</a><span>|</span>
                }
                <a asp-action="BookingToggle" asp-route-id="@Model.Id">Book</a>
            </td>
        }
    }
</tr>